<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.pkmmte.view.CircularImageView"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bod_semitransparent_alert"
            android:gravity="center">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corners_shape"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/iv_cerrar"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="right|center"
                    android:src="@drawable/cancelar" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_titulo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Listo!"
                    android:textSize="15sp"
                    pixlui:clearclipboardcontent="true"
                    pixlui:copyandpaste="false"
                    pixlui:typeface="OpenSans-Semibold.ttf" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_descripcion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:text="texto dinamico"
                    android:textSize="14sp"
                    pixlui:clearclipboardcontent="true"
                    pixlui:copyandpaste="false"
                    pixlui:typeface="OpenSans-Semibold.ttf" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>