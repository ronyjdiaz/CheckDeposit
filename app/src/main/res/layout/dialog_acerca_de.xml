<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.pkmmte.view.CircularImageView"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bod_semitransparent_alert"
            android:gravity="center">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_corners_shape"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/tv_backb"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Banco Occidental de Descuento Banco Universal"
                        android:textSize="11sp"
                        pixlui:clearclipboardcontent="true"
                        pixlui:copyandpaste="false"
                        pixlui:typeface="OpenSans-Semibold.ttf" />

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/tv_backb2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Rif 30061946-0"
                        android:textSize="11sp"
                        pixlui:clearclipboardcontent="true"
                        pixlui:copyandpaste="false"
                        pixlui:typeface="OpenSans-Semibold.ttf" />

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/tv_backb3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Todos los derechos reservados."
                        android:textSize="11sp"
                        pixlui:clearclipboardcontent="true"
                        pixlui:copyandpaste="false"
                        pixlui:typeface="OpenSans-Semibold.ttf" />

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/tv_backb4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Version 1.0"
                        android:textSize="14sp"
                        pixlui:clearclipboardcontent="true"
                        pixlui:copyandpaste="false"
                        pixlui:typeface="OpenSans-Semibold.ttf" />

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/tv_backb5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="___________________________________________________________"
                        android:textColor="@color/bod_gray_text"
                        android:textSize="10sp"
                        pixlui:clearclipboardcontent="true"
                        pixlui:copyandpaste="false"
                        pixlui:typeface="OpenSans-Semibold.ttf" />


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical|center"
                        android:orientation="horizontal">

                        <com.neopixl.pixlui.components.textview.TextView
                            android:id="@+id/tv_backb7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="Powered by: "
                            android:textSize="8sp"
                            pixlui:clearclipboardcontent="true"
                            pixlui:copyandpaste="false"
                            pixlui:typeface="OpenSans-Semibold.ttf" />

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:src="@drawable/logo_adverweb_temp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_aceptar"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical|right">

                        <ImageView
                            android:id="@+id/iv_cerrar"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/continuar_fondoblanco" />

                        <com.neopixl.pixlui.components.textview.TextView
                            android:id="@+id/tv_cerrar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:clickable="true"
                            android:text="Continuar"
                            android:textSize="12sp"
                            pixlui:clearclipboardcontent="true"
                            pixlui:copyandpaste="false"
                            pixlui:typeface="OpenSans-Semibold.ttf" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>